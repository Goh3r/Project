<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.safe.safe.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Device Control Panel"
        android:textSize="30sp" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/heading">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:id="@+id/bulb_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_margin="10dp"
                android:background="@drawable/bulb_off"
                android:gravity="bottom"
                android:text="Bulb"
                android:textAlignment="gravity"
                android:textSize="30sp" />

            <Button
                android:id="@+id/fan_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/bulb_button"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/bulb_button"
                android:background="@drawable/fan_off"
                android:gravity="bottom"
                android:text="Fan"
                android:textAlignment="gravity"
                android:textSize="30sp" />

            <Button
                android:id="@+id/Lamp_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/bulb_button"
                android:layout_margin="10dp"
                android:background="@drawable/lamp_off"
                android:gravity="bottom"
                android:text="Lamp"
                android:textAlignment="gravity"
                android:textSize="30sp" />

            <Button
                android:id="@+id/camera_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/Lamp_button"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/Lamp_button"
                android:background="@drawable/camera_off"
                android:gravity="bottom"
                android:text="Camera"
                android:textAlignment="gravity"
                android:textSize="30sp" />

            <Button
                android:id="@+id/ac_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/Lamp_button"
                android:layout_margin="10dp"
                android:background="@drawable/ac_off"
                android:gravity="bottom"
                android:text="AC"
                android:textAlignment="gravity"
                android:textSize="30sp" />

            <Button
                android:id="@+id/gate_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/ac_button"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/ac_button"
                android:background="@drawable/gate_off"
                android:gravity="bottom"
                android:text="Gate"
                android:textAlignment="gravity"
                android:textSize="30sp" />

            <Button
                android:id="@+id/door_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/ac_button"
                android:layout_margin="10dp"
                android:background="@drawable/door_off"
                android:gravity="bottom"
                android:text="Room Door"
                android:textAlignment="gravity"
                android:textSize="30sp" />

            <Button
                android:id="@+id/tv_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/door_button"
                android:layout_margin="10dp"
                android:layout_toEndOf="@id/door_button"
                android:background="@drawable/tv_off"
                android:gravity="bottom"
                android:text="TV"
                android:textAlignment="gravity"
                android:textSize="30sp" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
